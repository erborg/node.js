<form method="post" action="/users">
    <div>
        <label for="user_username">Username *</label>
        <input type="text" name="user_username" id="user_username">
    </div>
    <div>
        <label for="user_email">Email *</label>
        <input type="email" name="user_email" id="user_email">
    </div>
